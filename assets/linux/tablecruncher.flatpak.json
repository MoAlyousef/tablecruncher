{
    "app-id": "com.tablecruncher.Tablecruncher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "tablecruncher",
    "modules": [
      {
        "name": "tablecruncher",
        "buildsystem": "simple",
        "build-commands": [
          "install -Dm755 tablecruncher /app/bin/tablecruncher",
          "install -Dm644 tablecruncher.desktop /app/share/applications/com.tablecruncher.Tablecruncher.desktop",
          "install -Dm644 icons/64x64/tablecruncher.png /app/share/icons/hicolor/64x64/apps/com.tablecruncher.Tablecruncher.png",
          "install -Dm644 icons/128x128/tablecruncher.png /app/share/icons/hicolor/128x128/apps/com.tablecruncher.Tablecruncher.png",
          "install -Dm644 icons/256x256/tablecruncher.png /app/share/icons/hicolor/256x256/apps/com.tablecruncher.Tablecruncher.png"
        ],
        "sources": [
          { "type": "file", "path": "../../build/dist/tablecruncher" },
          { "type": "file", "path": "tablecruncher.desktop" },
          { "type": "file", "path": "icons/64x64/tablecruncher.png" },
          { "type": "file", "path": "icons/128x128/tablecruncher.png" },
          { "type": "file", "path": "icons/256x256/tablecruncher.png" }
        ]
      }
    ]
  }
  